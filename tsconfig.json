{
  "compilerOptions": {
    "noImplicitAny": false,
    "noEmitOnError": true,
    "target": "es2015",
    "lib": [ "es2015", "es2015.collection", "es2015.iterable", "es2015.core", "es2016", "es2017", "es2018", "es2019", "es2020", "es2021", "es2022", "es2023", "dom", "dom.iterable"],
    "declaration": true,
    "outDir": "./dist/types",
    "declarationDir": "./dist",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "removeComments": true,
    "allowUmdGlobalAccess": true,
    "moduleResolution": "node",
    "isolatedModules": true,
    "module": "esnext",
    "strict": false,
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
